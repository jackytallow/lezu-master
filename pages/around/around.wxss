.container{
  width: 100%;
  height: 100%；
}

map{
  width: 100%;
}

.bd{
  width: 88%;
  height: 850rpx;
  margin: 0 auto;
}

.bd .around{
  position: relative;
  width: 100%;
  height: 100rpx;
  margin: 30rpx 0;
}

.bd .around .mall,
.bd .around .hospital,
.bd .around .supMarket,
.bd .around .vegMarket{
  position: absolute;
  width: 72rpx;
  height: 72rpx;
  top: 50%;
  margin-top: -36rpx;
}

.bd .around .mall image,
.bd .around .hospital image,
.bd .around .supMarket image,
.bd .around .vegMarket image{
  width: 100%;
  height: 100%;
}

.bd .around .con{
  position: absolute;
  height: 100rpx;
  bottom: 0;
  margin-bottom: -20rpx;
  font-size: 32rpx;
}

.bd .around .mall-left,
.bd .around .hospital-left,
.bd .around .supMarket-left,
.bd .around .vegMarket-left{
  margin-left: 100rpx;
}

.bd .around .mall-left .distance,
.bd .around .hospital-left .distance,
.bd .around .supMarket-left .distance,
.bd .around .vegMarket-left .distance{
  font-size: 28rpx;
  color: #999999;
}

.bd .around .mall-right,
.bd .around .hospital-right,
.bd .around .supMarket-right,
.bd .around .vegMarket-right{
  font-size: 28rpx;
  color: #999999;
  right: 0;
}

.bd .around .mall-right .time,
.bd .around .hospital-right .time,
.bd .around .supMarket-right .time,
.bd .around .vegMarket-right .time{
  font-size: 32rpx;
  position: absolute;
  right: 0;
}

.bd .around .mall-right .time{
  color: #FFAE00;
}

.bd .around .hospital-right .time{
  color: #79D11A;
}

.bd .around .supMarket-right .time{
  color: #EF3778;
}

.bd .around .vegMarket-right .time{
  color: #009CFF;
}

.bd .around .mall-right .time-btm,
.bd .around .hospital-right .time-btm,
.bd .around .supMarket-right .time-btm,
.bd .around .vegMarket-right .time-btm{
  position: relative;
  margin-top: 40rpx;
}

.bd .line{
  width: 100%;
  height: 0;
  border-top: 1rpx solid #DDDDDD;
}

/* 底部导航栏 */
.tabBar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 230rpx;
  background-color: #4F81B8;
  overflow: hidden;
  white-space: nowrap;
  display: flex;
}

.scroll{
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.tabBar .recommend,
.tabBar .station,
.tabBar .traffic,
.tabBar .around,
.tabBar .order{
  display: inline-block;
  margin-left: 30rpx;
  margin-right: 30rpx;

}

.tabBar .around{
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.tabBar .recommend .rec-icon,
.tabBar .station .sta-icon,
.tabBar .traffic .tra-icon,
.tabBar .around .aro-icon,
.tabBar .order .ord-icon{
  width: 90rpx;
  height: 90rpx;
}

.tabBar .around .aro-icon{
  width: 120rpx;
  height: 120rpx;
}

.tabBar view image{
  width: 100%;
  height: 100%;
}

.tabBar .recommend .rec-txt,
.tabBar .station .sta-txt,
.tabBar .traffic .tra-txt,
.tabBar .around .aro-txt,
.tabBar .order .ord-txt{
  font-size: 25rpx;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
}